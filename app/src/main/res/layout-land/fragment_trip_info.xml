<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:animateLayoutChanges="true"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/textDataContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_mapTurnActive"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:id="@+id/tripDataLayout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_between_blocks_info"
            android:background="@drawable/blocks_with_shadow"
            android:padding="@dimen/block_padding"
            >

            <TextView
                android:id="@+id/text_tripDataLayoutLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_data_layout_label"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/label_text_size"
                />

            <TextView
                android:id="@+id/text_tripDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_tripDataLayoutLabel"
                android:layout_marginLeft="@dimen/block_item_start_margin"
                android:text="@string/trip_date_label"
                />

            <TextView
                android:id="@+id/text_tripDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text_tripDateLabel"
                android:layout_alignParentRight="true"
                />


            <TextView
                android:id="@+id/text_tripDistanceTravelledLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_tripDateLabel"
                android:layout_marginLeft="@dimen/block_item_start_margin"
                android:layout_marginTop="@dimen/block_item_top_margin"
                android:text="@string/distance_travelled_hint"
                />

            <TextView
                android:id="@+id/text_tripDistanceTravelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text_tripDistanceTravelledLabel"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/text_tripIdLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_tripDistanceTravelledLabel"
                android:layout_marginLeft="@dimen/block_item_start_margin"
                android:layout_marginTop="@dimen/block_item_top_margin"
                android:paddingBottom="@dimen/block_bottom_padding"
                android:text="@string/trip_ID_hint"
                />

            <TextView
                android:id="@+id/text_tripId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/text_tripIdLabel"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tripTimeSpentLayout"
            android:layout_alignRight="@id/tripFuelSpentLayout"
            android:layout_alignTop="@id/tripTimeSpentLayout"
            android:layout_marginLeft="@dimen/margin_between_blocks_info"
            android:layout_toRightOf="@+id/tripTimeSpentLayout"
            android:background="@drawable/blocks_with_shadow"
            android:padding="@dimen/block_padding"
            >

            <TextView
                android:id="@+id/text_speedLayoutLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed_layout_label"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/label_text_size"
                />

            <TextView
                android:id="@+id/text_maxSpeedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_speedLayoutLabel"
                android:layout_marginLeft="@dimen/block_item_start_margin"
                android:text="@string/maximum_speed_hint"
                />

            <TextView
                android:id="@+id/text_tripMaxSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text_maxSpeedLabel"
                android:layout_alignParentRight="true"
                />


            <TextView
                android:id="@+id/text_tripAvgSpeedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_maxSpeedLabel"
                android:layout_marginLeft="@dimen/block_item_start_margin"
                android:layout_marginTop="@dimen/block_item_top_margin"
                android:paddingBottom="@dimen/block_bottom_padding"
                android:text="@string/average_speed_hint"

                />

            <TextView
                android:id="@+id/text_tripAvgSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/text_tripAvgSpeedLabel"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tripTimeSpentLayout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tripDataLayout"
            android:layout_margin="@dimen/margin_between_blocks_info"
            android:background="@drawable/blocks_with_shadow"
            android:padding="@dimen/block_padding"
            >

            <TextView
                android:id="@+id/tripTimeSpentLayoutLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_spent_layout_label"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/label_text_size"
                />


            <TextView
                android:id="@+id/tripTimeSpentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripTimeSpentLayoutLabel"
                android:layout_marginLeft="@dimen/block_item_start_margin"
                android:text="@string/time_spent_on_trip_hint"
                />

            <TextView
                android:id="@+id/text_tripTimeSpent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tripTimeSpentLabel"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/tripTimeSpentInMotionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripTimeSpentLabel"
                android:layout_marginLeft="@dimen/block_item_start_margin"
                android:layout_marginTop="@dimen/block_item_top_margin"
                android:text="@string/time_spent_in_motion_hint"
                />

            <TextView
                android:id="@+id/text_tripTimeSpentInMotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tripTimeSpentInMotionLabel"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/tripTimeSpentOnStopLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripTimeSpentInMotionLabel"
                android:layout_marginLeft="@dimen/block_item_start_margin"
                android:layout_marginTop="@dimen/block_item_top_margin"
                android:paddingBottom="@dimen/block_bottom_padding"
                android:text="@string/time_spent_on_stop_hint"
                />

            <TextView
                android:id="@+id/text_tripTimeSpentOnStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tripTimeSpentOnStopLabel"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tripFuelSpentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_between_blocks_info"
            android:layout_toRightOf="@+id/tripDataLayout"
            android:background="@drawable/blocks_with_shadow"
            android:padding="@dimen/block_padding"
            >

            <TextView
                android:id="@+id/tripFuelSpentLayoutLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fuel_spent_layout_label"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/label_text_size"
                />

            <TextView
                android:id="@+id/text_tripAvgFuelConsumptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tripFuelSpentLayoutLabel"
                android:layout_marginLeft="@dimen/block_item_start_margin"
                android:text="@string/average_fuel_consumption_hint"
                />

            <TextView
                android:id="@+id/text_tripAvgFuelConsumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text_tripAvgFuelConsumptionLabel"
                android:layout_alignParentRight="true"
                />


            <TextView
                android:id="@+id/tripFuelSpentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_tripAvgFuelConsumptionLabel"
                android:layout_marginLeft="@dimen/block_item_start_margin"
                android:layout_marginTop="@dimen/block_item_top_margin"
                android:text="@string/fuel_spent_hint"
                />

            <TextView
                android:id="@+id/text_tripFuelSpent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tripFuelSpentLabel"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/tripMoneyOnTripFuelSpentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripFuelSpentLabel"
                android:layout_marginLeft="@dimen/block_item_start_margin"
                android:layout_marginTop="@dimen/block_item_top_margin"
                android:paddingBottom="@dimen/block_bottom_padding"
                android:text="@string/money_on_fuel_spent_hint"
                />

            <TextView
                android:id="@+id/text_tripMoneyOnTripFuelSpent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tripMoneyOnTripFuelSpentLabel"
                />

        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="450dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/btn_mapTurnActive"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_background"
        android:src="@drawable/btn_map"
        />
</RelativeLayout>


