<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:keepScreenOn="true"
    tools:context=".ui.fragment.MainFragment">

    <ImageButton
        android:id="@+id/startButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:background="@drawable/play_alt2"
        />

    <ImageButton
        android:id="@+id/eraseButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/tripListButton"
        android:layout_below="@+id/tripListButton"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/ic_menu_delete"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/stopButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:background="@drawable/stop_alt1"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/tripListButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/statusImageView"
        android:background="@android:drawable/ic_menu_sort_by_size"
        />

    <RelativeLayout
        android:id="@+id/speedometerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/fuelLayout"
        android:layout_toStartOf="@+id/tripListButton">

        <TextView
            android:id="@+id/speedometerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/initial_speedometer_val"
            android:textSize="@dimen/speedometerTextViewSize"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/fuelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusImageView"
        android:layout_marginStart="5dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/fuelIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gas_station"
            />

        <TextView
            android:id="@+id/fuelLeftHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fuelIcon"
            android:layout_toEndOf="@+id/fuelIcon"
            android:text="@string/fuel_left_label"
            android:textSize="@dimen/metricsLandTextSize"
            android:textStyle="bold|italic"
            android:typeface="sans"
            />

        <TextView
            android:id="@+id/fuelLeftView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fuelLeftHint"
            android:layout_below="@id/fuelLeftHint"
            android:textSize="@dimen/metricPortraitTextSize"
            />

        <RelativeLayout
            android:id="@+id/refillButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/fuelIcon"
            android:layout_below="@id/fuelIcon"
            >

            <ImageButton
                android:id="@+id/refillButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/gas_pump"
                />

            <TextView
                android:id="@+id/refillHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/refillButton"
                android:layout_toEndOf="@+id/refillButton"
                android:text="@string/refill_hint"
                android:textSize="@dimen/metricsLandTextSize"
                android:textStyle="bold|italic"
                android:typeface="sans"
                />
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/statusImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/speedometerContainer"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/red_satellite"
        />
</RelativeLayout>
