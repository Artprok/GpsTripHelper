<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:keepScreenOn="true"
    tools:context=".ui.fragment.MainFragment"
    >


    <ImageButton
        android:id="@+id/btn_Settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btn_TripList"
        android:layout_below="@+id/btn_TripList"
        android:layout_marginTop="7dp"
        android:background="@drawable/btn_background"
        android:src="@drawable/btn_settings"
        />

    <ImageButton
        android:id="@+id/btn_TripList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/image_statusView"
        android:layout_marginRight="6dp"
        android:background="@drawable/btn_background"
        android:src="@drawable/btn_triplist"
        />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="7dp"
        android:background="@drawable/btn_background"
        android:text="@string/stop"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/image_statusView"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_background"
        android:text="@string/start"/>

    <RelativeLayout
        android:id="@+id/speedometerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/fuelLayout"
        android:layout_toLeftOf="@id/btn_Settings"
        >

        <TextView
            android:id="@+id/text_SpeedometerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="8dp"
            android:text="@string/initial_speedometer_val"
            android:textSize="@dimen/speedometerTextViewSize"
            android:layout_centerHorizontal="true"
            android:paddingRight="25dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/fuelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_statusView"
        android:layout_alignLeft="@id/image_statusView"
        android:visibility="visible">

        <ImageView
            android:id="@+id/image_fuelIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/gas_station_icon"
            />

        <TextView
            android:id="@+id/text_fuelLeftHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_fuelIcon"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/image_fuelIcon"
            android:text="@string/fuel_left_label"
            android:paddingBottom="4dp"
            android:paddingRight="4dp"
            android:textSize="@dimen/metricsTextSize"
            android:textStyle="bold|italic"
            android:typeface="sans"/>

        <TextView
            android:text="a"
            android:id="@+id/text_fuelLeftView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_fuelLeftHint"
            android:layout_below="@id/text_fuelLeftHint"
            android:textSize="@dimen/metricPortraitTextSize"
            android:paddingRight="7dp"
            android:paddingBottom="5dp"
            />

        <RelativeLayout
            android:id="@+id/refillButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/image_fuelIcon"
            android:layout_below="@id/image_fuelIcon"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_background"
            android:paddingTop="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="4dp"
            >

            <ImageButton
                android:id="@+id/btn_refill"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_refill"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_refill"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/btn_refill"
                android:text="@string/refill_hint"
                android:textSize="@dimen/metricsTextSize"
                android:textStyle="bold|italic"
                android:typeface="sans"/>
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_statusView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/red_satellite"
        />
</RelativeLayout>
