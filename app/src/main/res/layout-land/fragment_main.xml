<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:keepScreenOn="true"
    tools:context=".ui.fragment.MainFragment"
    >


    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tripListButton"
        android:layout_below="@+id/tripListButton"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:src="@drawable/settings_button"
        />

    <ImageButton
        android:id="@+id/tripListButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/statusImageView"
        android:background="@drawable/button_background"
        android:src="@drawable/trip_list_button"
        />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="7dp"
        android:background="@drawable/button_background"
        android:text="@string/stop"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/startButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="7dp"
        android:background="@drawable/button_background"
        android:text="@string/start"
        />

    <RelativeLayout
        android:id="@+id/speedometerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tripListButton"
        android:layout_toRightOf="@+id/fuelLayout">

        <TextView
            android:id="@+id/speedometerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/initial_speedometer_val"
            android:textSize="@dimen/speedometerTextViewSize"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/fuelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusImageView"
        android:layout_marginLeft="5dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/fuelIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gas_station_icon"
            />

        <TextView
            android:id="@+id/fuelLeftHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fuelIcon"
            android:layout_toRightOf="@+id/fuelIcon"
            android:text="@string/fuel_left_label"
            android:textSize="@dimen/metricsTextSize"
            android:textStyle="bold|italic"
            android:typeface="sans"
            />

        <TextView
            android:id="@+id/fuelLeftView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fuelLeftHint"
            android:layout_below="@id/fuelLeftHint"
            android:textSize="@dimen/metricPortraitTextSize"
            />

        <RelativeLayout
            android:id="@+id/refillButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignLeft="@id/fuelIcon"
            android:layout_below="@id/fuelIcon"
            android:background="@drawable/button_background"
            android:padding="2dp"
            >

            <ImageButton
                android:id="@+id/refillButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/refill_button"
                />

            <TextView
                android:id="@+id/refillHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/refillButton"
                android:layout_toRightOf="@+id/refillButton"
                android:text="@string/refill_hint"
                android:textSize="@dimen/metricsTextSize"
                android:textStyle="bold|italic"
                android:typeface="sans"
                />
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/statusImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/speedometerContainer"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/red_satellite"
        />
</RelativeLayout>
