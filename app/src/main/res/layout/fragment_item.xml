<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_between_data">

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        />

    <ImageView
        android:id="@+id/image_calendarIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/text_id"
        android:layout_alignLeft="@+id/text_id"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/calendar_icon"/>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_calendarIcon"
        android:layout_toRightOf="@+id/image_calendarIcon"
        android:textSize="25sp"
        />
</RelativeLayout>
